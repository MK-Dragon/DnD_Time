<DrawerClickableItem@MDNavigationDrawerItem>
    focus_color: "#e7e4c0"
    text_color: "#4a4939"
    icon_color: "#4a4939"
    ripple_color: "#c5bdd2"
    selected_color: "#0c6c4d"


<DrawerLabelItem@MDNavigationDrawerItem>
    text_color: "#4a4939"
    icon_color: "#4a4939"
    focus_behavior: False
    selected_color: "#4a4939"
    _no_ripple_effect: True


<MainWindow>:
	container: container

	BoxLayout:
	    orientation: 'vertical'
        size: root.width, root.height
        padding: 2

        MDTopAppBar:
            id: reload_btn_icon
            title: "D&D Time!"
            elevation: 2
            opposite_colors: True
            #specific_text_color: app.theme_cls.accent_dark
            #md_bg_color: app.theme_cls.primary_palette #app.THEME_pri
            left_action_items:[["menu", lambda x: nav_drawer.set_state("open")]]
            right_action_items: [["dice-d20-outline"]]


        MDBottomNavigation:
            #panel_color:  app.THEME_pri #"orange" app.theme_cls.primary_dark
            #selected_color_background: app.theme_cls.accent_light #app.theme_cls.accent_color
            text_color_active: app.theme_cls.accent_dark

            MDBottomNavigationItem:
                name: 'screen 1'
                text: 'Roll Dice!'
                icon: 'dice-d20'
                #badge_icon: "numeric-1"

                BoxLayout:
                    orientation: 'vertical'
                    size: root.width, root.height
                    padding: 2

                    GridLayout:
                        cols: 2
                        padding: 10

                        spacing: "15dp"
                        id: container

                    BoxLayout:
                        orientation: 'vertical'
                        size: root.width, root.height
                        padding: 30
                        spacing: "15dp"

                        MDRectangleFlatIconButton:
                            icon: "reload" #"diamond-stone"
                            text: "Reset Dice"
                            theme_text_color: "Custom"
                            text_color: app.theme_cls.accent_color
                            line_color: app.theme_cls.primary_color
                            theme_icon_color: "Custom"
                            icon_color: app.theme_cls.primary_color
                            pos_hint: {"center_x": .4, "center_y": .4}# only x works here
                            size_hint: (0.4), None
                            on_release:
                                root.reset_dice()

                        MDRectangleFlatIconButton:
                            icon: "dice-multiple" #"duck"
                            text: "Roll All Dice!"
                            theme_text_color: "Custom"
                            text_color: app.theme_cls.accent_color
                            line_color: app.theme_cls.primary_color
                            theme_icon_color: "Custom"
                            icon_color: app.theme_cls.primary_color
                            pos_hint: {"center_x": .6, "center_y": .1}# only x works here
                            size_hint: (0.4), None
                            on_release:
                                root.roll_dice_button()

            MDBottomNavigationItem:
                name: 'screen 2'
                text: 'Items'
                icon: 'axe-battle'
                #badge_icon: "dice-d20-outline"

                ScrollView:
                    MDList:

                        MDRectangleFlatIconButton:
                            icon: "currency-eur"
                            text: "Euro Milh√µes"
                            theme_text_color: "Custom"
                            text_color: "blue"
                            line_color: "red"
                            theme_icon_color: "Custom"
                            icon_color: "orange"
                            pos_hint: {"center_x": .4, "center_y": .4}# only x works here
                            size_hint: (0.4)None
                            on_release:
                                root.roll_euro_button(50, 5, 12, 2)

                        MDRectangleFlatIconButton:
                            icon: "sleep"
                            text: "EuroDreams"
                            theme_text_color: "Custom"
                            text_color: "blue"
                            line_color: "red"
                            theme_icon_color: "Custom"
                            icon_color: "orange"
                            pos_hint: {"center_x": .4, "center_y": .4}# only x works here
                            size_hint: (0.4), None
                            on_release:
                                root.roll_euro_button(40, 6, 5, 1)


            MDBottomNavigationItem:
                name: 'screen 3'
                text: 'Status'
                icon: 'book-open-variant' #'book-edit'
                #badge_icon: "dice-d20-outline"

                BoxLayout:
                    orientation: 'vertical'
                    size: root.width, root.height
                    padding: 30
                    spacing: "15dp"

                    MDRectangleFlatIconButton:
                        padding: 15
                        icon: "duck"
                        text: "Status"
                        theme_text_color: "Custom"
                        text_color: "green"
                        line_color: "red"
                        theme_icon_color: "Custom"
                        icon_color: "orange"
                        pos_hint: {"center_x": .6, "center_y": .1}# only x works here
                        size_hint: (0.4), None
                        on_release:
                            app.theme_cls.theme_style = 'Light'


    MDNavigationDrawer:
        id: nav_drawer
        radius: (0, 16, 16, 0)

        MDNavigationDrawerMenu:

            MDNavigationDrawerHeader:
                title: "User Name"
                title_color: "#4a4939"
                text: "Settings"
                spacing: "4dp"
                padding: "12dp", 0, 0, "56dp"

            MDNavigationDrawerLabel:
                text: "Theme"

            DrawerClickableItem:
                icon: "theme-light-dark"
                right_text: app.theme_cls.theme_style
                text_right_color: "#4a4939"
                text: 'Mode:'
                on_release:
                    app.change_theme_setting('style')

            DrawerClickableItem:
                id: primary
                icon: "format-paint"
                right_text: app.theme_cls.primary_palette
                text_right_color: "#4a4939"
                text: 'Primary Palette:'
                on_release:
                    app.popup_color_picker('Primary')

            DrawerClickableItem:
                id: accent
                icon: "format-paint"
                right_text: app.theme_cls.accent_palette
                text_right_color: "#4a4939"
                text: 'Accent Palette:'
                on_release:
                    app.popup_color_picker('Accent')

<DiceCard>
    radius: (5, 5, 5, 5)
    padding: 10
    size_hint: (0.3), None
    size: root.width, "100dp"
    md_bg_color: app.theme_cls.primary_light
    elevation: 3

    MDRelativeLayout:
        MDIconButton:
            id: card_id
            icon: "plus"
            pos_hint: {"top": 1, "right": 1}
            on_release:
                app.main_window.plus_button(root.card_id)

        MDIconButton:
            icon: "minus"
            pos_hint: {"bot": 1, "right": 1}
            on_release:
                app.main_window.minus_button(root.card_id)

        MDIconButton:
            icon: root.dice_icon #"dice-d20"
            pos_hint: {"top": 1, "left": 1}
            on_release:
                app.main_window.icon_button(root.card_id)
            theme_icon_color: "Custom"
            icon_color: app.theme_cls.accent_dark

        MDLabel:
            id: label
            text: root.text
            adaptive_size: True
            pos: "12dp", "12dp"
            bold: True


<PopupRolls>
    container: container

    BoxLayout:
        orientation: "vertical"
        spacing: "12dp"
        size_hint_y: None
        id: container

        MDLabel:
            id: label
            text: "Hello!"
            adaptive_size: True
            color: app.THEME_txt
            pos: "12dp", "12dp"
            bold: True

<Content>
    orientation: "vertical"
    spacing: "12dp"
    size_hint_y: None
    height: "200dp"
    ScrollView:
        MDList:
            id: container